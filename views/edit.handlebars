<form action="/restaurants/{{ restaurant._id }}?_method=PUT" method="POST">
  <div class="container mx-auto m-5" style="width:60%">
    <div class="form-group row">
      <label class="col-3 col-form-label">Restaurant Name</label>
      <div class="col-9">
        <input type="text" class="form-control" placeholder="" name="name" value="{{restaurant.name}}" required>
        <div class="invalid-feedback">
          required item
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-3 col-form-label">English Name</label>
      <div class="col-9">
        <input type="text" class="form-control" placeholder="" name="name_en" value="{{restaurant.name_en}}">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-3 col-form-label">Category</label>
      <div class="col-9">
        <input type="text" class="form-control" placeholder="" name="category" value="{{restaurant.category}}" required>
        <div class="invalid-feedback">
          required item
        </div>
      </div>
    </div>
    <div class="form-group row">
      <label class="col-3 col-form-label">Image</label>
      <div class="col-9">
        <input type="text" class="form-control" placeholder="http//" name="image" value="{{restaurant.image}}">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-3 col-form-label">Location</label>
      <div class="col-9">
        <input type="text" class="form-control" placeholder="" name="location" value="{{restaurant.location}}">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-3 col-form-label">Phone</label>
      <div class="col-9">
        <input type="text" class="form-control" placeholder="" name="phone" value="{{restaurant.phone}}">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-3 col-form-label">Google Map</label>
      <div class="col-9">
        <input type="text" class="form-control" placeholder="http://" name="google_map"
          value="{{restaurant.google_map}}">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-3 col-form-label">Rating</label>
      <div class="col-9">
        <input type="number" min="1" max="5" step="0.1" class="form-control" placeholder="1.0 ~ 5.0" name="rating"
          value="{{restaurant.rating}}">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-3 col-form-label">Description</label>
      <div class="col-9">
        <textarea class="form-control" placeholder="" name="description">{{restaurant.description}}</textarea>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <button type="submit" class="btn btn-info  d-flex align-items-center">Save</button>
      <a href="/restaurants/{{ restaurant._id }}" class="btn btn-secondary d-flex align-items-center mx-2">Back</a>
    </div>
  </div>
</form>